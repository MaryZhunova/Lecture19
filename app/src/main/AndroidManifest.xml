<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipe">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Recipe"
        android:name=".NetworkApp">
        <activity
            android:name="com.example.recipe.presentation.main.MainRecipesActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.recipe.presentation.settings.SettingsActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.example.recipe.presentation.switchfavourites.SwitchFavouritesActivity"
            android:exported="true">
        </activity>
        <activity android:name="com.example.recipe.presentation.recipesinfo.RecipesInfoActivity"
            android:exported="true">
        </activity>
        <activity android:name="com.example.recipe.presentation.recipedetail.RecipeDetailActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>